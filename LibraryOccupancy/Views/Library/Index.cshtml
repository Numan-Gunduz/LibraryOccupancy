




 @model LibraryOccupancy.Models.Library
@{
    ViewData["Title"] = "Kütüphane Anlık Doluluk";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kütüphane Anlık Doluluk</title>
    <style>
        /* Genel Ayarlar */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: url('/images/background.jpg');
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            color: #333;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0.7); /* Beyaz katman */
                z-index: -1;
            }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-around;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 15px 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

            .navbar .logo {
                font-size: 1.8rem;
                font-weight: bold;
                color: #007BFF;
                text-decoration: none;
            }

            .navbar .menu {
                display: flex;
                gap: 20px;
            }

                .navbar .menu a {
                    font-size: 1rem;
                    color: #333;
                    text-decoration: none;
                    font-weight: 600;
                    transition: color 0.3s ease;
                }

                    .navbar .menu a:hover {
                        color: #D26E00;
                    }

        /* Ana İçerik Kutusu */
        .container {
            max-width: 800px;
            margin: 150px auto 50px;
            background: linear-gradient(to bottom, #ffffff, #f9f9f9);
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            padding: 40px 20px;
            text-align: center;
            z-index: 10;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 10px;
            color: #333;
        }

        h2 {
            font-size: 1.5rem;
            color: #555;
            margin-bottom: 20px;
        }

        /* Resim Alanı */
        .image-container {
            width: 100%;
            max-height: 300px;
            overflow: hidden;
            border-radius: 15px;
            margin-bottom: 20px;
            position: relative;
        }

            .image-container img {
                width: 100%;
                height: auto;
                object-fit: cover;
            }

        /* Kapasite Alanı */
        .capacity-container {
            display: flex;
            justify-content: space-around;
            gap: 20px;
            margin-top: 30px;
        }

        .capacity-box {
            width: 180px;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            background: linear-gradient(to bottom, #f0f4f8, #ffffff);
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .capacity-box:hover {
                transform: scale(1.08);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            }

        .capacity-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #555;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .capacity-value {
            font-size: 2rem;
            font-weight: bold;
            margin: 5px 0;
        }

            .capacity-value.green {
                color: #2ECC71;
            }

            .capacity-value.red {
                color: #E74C3C;
            }

            .capacity-value.blue {
                color: #3498DB;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <a href="#" class="logo">Konya Büyükşehir Belediyesi</a>
        <div class="menu">
            <a href="#">Anasayfa</a>
            <a href="#">Hakkımızda</a>
            <a href="#">İletişim</a>
            <a href="#">Kütüphaneler</a>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="container">
        <h1>Prof. Dr. Erol Güngör Kütüphanesi</h1>
        <h2>Kütüphane Anlık Doluluk</h2>

        <!-- Resim Alanı -->
        <div class="image-container">
            <img src="/images/ErolGüngör.png" alt="Kütüphane Resmi" />
        </div>

        <!-- Kapasite Alanı -->
        <div class="capacity-container">
            <div class="capacity-box">
                <div class="capacity-title">Kapasite</div>
                <div class="capacity-value green">@Model.StudyTableCapacity</div>
            </div>
            <div class="capacity-box">
                <div class="capacity-title">Dolu</div>
                <div class="capacity-value red">@Model.StudyTableOccupied</div>
            </div>
            <div class="capacity-box">
                <div class="capacity-title">Boş</div>
                <div class="capacity-value green">@(Model.StudyTableCapacity - Model.StudyTableOccupied)</div>
            </div>
            <div class="capacity-box">
                <div class="capacity-title">Bekleyen</div>
                <div class="capacity-value blue">0</div>
            </div>
        </div>
    </div>
</body>
</html>
